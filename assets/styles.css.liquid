body { 
	background-color: {{ settings.bs_background_color }};
	{% if settings.bs_use_background_image %}
		background-image: url("{{ settings.bs_background_image_select | asset_url }}");
	{% endif %}
}

#content {
	{% if settings.bs_use_content_background_color %}
		background-color: {{ settings.bs_content_background_color }};
	{% endif %}
}